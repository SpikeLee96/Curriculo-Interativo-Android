<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/endeavour"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:text="Spike Lee Figueiredo Barbosa"
                android:textColor="@color/white"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_marginTop="60dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Desenvolvedor de Software, \n 25 anos"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:textStyle="italic">

            </TextView>

            <Button
                android:id="@+id/contato"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:text="Contato"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/lightblue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed">

            </Button>

            <Button
                android:id="@+id/objetivo"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:text="Objetivo"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/lightblue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed">

            </Button>

            <Button
                android:id="@+id/graduacao"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:text="Graduação"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/lightblue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed">

            </Button>

            <Button
                android:id="@+id/curso"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:text="Cursos"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/lightblue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed">

            </Button>

            <Button
                android:id="@+id/exp_profissional"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:text="Experiência Profissional"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/lightblue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed">

            </Button>

            <Button
                android:id="@+id/habilidades"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:text="Habilidades"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/lightblue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed">

            </Button>

            <Button
                android:id="@+id/projetos"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:text="Projetos do Portfólio"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/lightblue"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed">

            </Button>

        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>